  <div class="row">
    <div class="col-md-8 col-xs-12 col-sm-10 col-sm-offset-1 col-md-offset-4  form__border">

      <div class="text-center">
        <h1 style="color: white;font-family:  'Audiowide', cursive; ">Iniciar sesion</h1>
      </div>
      <hr>

      <%= form_for('user', url: user_session_path) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Enter Email",:required => "required" %>
          <small id="emailHelp" class="form-text text-muted">Cuenta de correo</small>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => "Password",:required => "required" %>
          <small id="emailHelp" class="form-text text-muted">Manten segura tu contraseÃ±a,</small><br>

        </div>

        <div class="actions">
          <%= link_to user_session_path, :class => "login__button btn btn-outline-white btn-round btn-block big_btn" do %>
            <span class="text">Entrar <%= fa_icon "sign-in"%></span>
          <%end%>
        </div>
      <% end %>
      <hr>
      
    </div>
  </div>
 


